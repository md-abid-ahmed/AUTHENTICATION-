  min-height: 100vh;
  padding: 2rem;
  box-sizing: border-box;
}

.land-dashboardHeader {
  text-align: center;
  margin-bottom: 3rem;
}

.land-headerTitle {
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
  color: #D71E28;
}

.land-headerRole {
  font-size: 1.2rem;
  color: #000000;
}

